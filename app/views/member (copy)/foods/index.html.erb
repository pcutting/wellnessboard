<h1>Listing foods</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Calories</th>
    <th>Protein</th>
    <th>Date</th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%=h food.name %></td>
    <td><%=h food.calories %></td>
    <td><%=h food.protein %></td>
    <td><%=h food.date_to_s(:long) %></td>
    <td><%= link_to 'Edit', edit_member_food_path(food) %></td>
    <td><%= link_to 'Destroy', [:member, food], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

