  <%= yield :head %>
   
</head>
<body>

<div id="container">
<div id="masthead">
<div class="left">
Welcome to your Wellness Board!
</div>

<div class="user_nav right">
  <%= link_to "Edit Profile", edit_user_path(:current) %> |
  <%= link_to "Logout",    logout_path %>
</div> <%# close id=user_nav %>

<div class="last">
<p style="color: green"><%= flash[:notice] %></p>
</div>

</div> <%# close id=masthead %>


<div >
<%= yield %>
</div>

<div id="footer" class="last">

<div class="left" >
MyWellnessBoard.com
</div>

<div class="right" >
Herbalife
</div>

</div> <%# id=footer %>

</div> <%# close id=container %> 

