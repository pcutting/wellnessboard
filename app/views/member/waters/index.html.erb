<h1>Listing waters</h1>

<table>
  <tr>
    <th>User</th>
    <th>Date</th>
    <th>Onces</th>
  </tr>

<% @waters.each do |water| %>
  <tr>
    <td><%=h water.user %></td>
    <td><%=h water.date %></td>
    <td><%=h water.onces %></td>
    <td><%= link_to 'Show', water %></td>
    <td><%= link_to 'Edit', edit_water_path(water) %></td>
    <td><%= link_to 'Destroy', water, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New water', new_water_path %>