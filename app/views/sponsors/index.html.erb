<h1>Listing sponsors</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Motto</th>
    <th>Summary</th>
  </tr>

<% @sponsors.each do |sponsor| %>
  <tr>
    <td><%=h sponsor.code %></td>
    <td><%=h sponsor.name %></td>
    <td><%=h sponsor.email %></td>
    <td><%=h sponsor.phone %></td>
    <td><%=h sponsor.address %></td>
    <td><%=h sponsor.city %></td>
    <td><%=h sponsor.state %></td>
    <td><%=h sponsor.zip %></td>
    <td><%=h sponsor.motto %></td>
    <td><%=h sponsor.summary %></td>
    <td><%= link_to 'Show', sponsor %></td>
    <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
    <td><%= link_to 'Destroy', sponsor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New sponsor', new_sponsor_path %>